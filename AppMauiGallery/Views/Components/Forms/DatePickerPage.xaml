<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiGallery.Views.Components.Forms.DatePickerPage"
             Title="DatePickerPage">
    <VerticalStackLayout Padding="10">
        <Frame BackgroundColor="Black" BorderColor="White">
            
            <DatePicker Date="2006/08/26" Format="dd/MMM/yyyy"
                        MinimumDate="1900/01/01"
                        MaximumDate="2024/01/31"
                        
                        DateSelected="DatePicker_DateSelected"/>
        
        </Frame>

        <Label x:Name="lblDateSelected" Text="Date Selected: " TextColor="White" />
    </VerticalStackLayout>
</ContentPage>