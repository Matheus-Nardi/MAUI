<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiGallery.Views.Components.Visuals.ShadowPage"
             Title="ShadowPage">
    <VerticalStackLayout Padding="15">
        <Border Padding="10" BackgroundColor="White" Stroke="DarkGreen" >
            <Border.Shadow>
            <Shadow  Radius="8"
                     Brush="Green"
                     Opacity="0.8"
                     Offset="10 , 4 "/>
            </Border.Shadow>
            <VerticalStackLayout>

                <Label
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>