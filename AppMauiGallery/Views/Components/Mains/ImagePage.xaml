<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiGallery.Views.Components.Mains.ImagePage"
             Title="ImagePage"
             BackgroundColor="#f9f9f9">
    <ScrollView>
        
    <VerticalStackLayout Margin="10" Spacing="50">
        <Image 
               x:Name="ImagemAnime"
               Margin="0, 10" 
               Aspect="AspectFill"
               BackgroundColor="Gainsboro"
               IsOpaque="True"
               IsAnimationPlaying="True"
               
            Source="https://img.freepik.com/fotos-premium/garota-de-anime-assistindo-a-ilustracao-3d-do-por-do-sol_717906-1415.jpg"/>
        <Image 
            Source="dotnet_bot.svg"
            Aspect="Center"/>

        
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>